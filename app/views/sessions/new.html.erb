<%= form_for(:session, url: sessions_path) do |f| %>
	<%= f.label :email %>
	<%= f.text_field :email %>
<br>
	<%= f.label :password %>
	<%= f.password_field :password %>
<br>
	
	<% if am_i_signed_in?(current_user) %> <!-- aqui talvez se possa usar o 'signed_in?' -->
		<%= link_to "Sign Out", signout_path, method: "delete" %>
	<% else %>
		<%= f.submit "Sign in" %>
<% end %>
<% end %>
